'''

def solve():
    
    test = int(input())
    while(test):
        test-=1
        x = int(input())
        oddsum = 0
        oddcount = 0
        gret40 = 0
        while(x!=-1):

            if(x>40):
                gret40 += 1
            if x%2==1:
                oddsum += x
                oddcount += 1
            x = int(input())
        try:
            print(gret40,oddsum//oddcount)
        except:
            print(gret40,0)
solve()
